package sepm.ss13.e0828.gui;

import javax.swing.JComboBox;

import sepm.ss13.e0828.domain.Horse.Therapytype;

public class TherapytypeCombo extends JComboBox {

	
	public TherapytypeCombo(){
		Object[] types = getTherapytypes();
		for( int i = 0; i < types.length; i++ ){
			this.addItem(types[i]);
		}
	
	}
	
	
	private Object[] getTherapytypes(){
		Therapytype[] types = Therapytype.values();
		String strTypes[] = new String[(types.length + 1)];

		strTypes[0] = null;
		for( int i = 1; i < strTypes.length; i++ ){
			strTypes[i] = types[(i-1)].getText();
		}

		return strTypes;
	}
	
}
