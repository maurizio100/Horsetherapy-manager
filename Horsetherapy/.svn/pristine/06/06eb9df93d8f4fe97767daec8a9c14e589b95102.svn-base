package sepm.ss13.e0828.domain;

import java.util.List;

public class Therapy {

	private Invoice therapyInvoice = null;
	private List<TherapyUnit> sessions = null;
	private float therapysum = 0.0f;
	
	public void addTherapy( TherapyUnit t ){
		sessions.add(t);		
	}
	
	public void setInvoice( Invoice i ){
		therapyInvoice = i;
	}
	
	public Invoice getInvoice(){
		return therapyInvoice;
	}
	
	public List<TherapyUnit> getSessions(){
		return sessions;
	}

	public void setTherapySum(float therapysum){
		this.therapysum = therapysum;
	}
	
	public float getTherapySum(){
		return therapysum;
	}
	
}
